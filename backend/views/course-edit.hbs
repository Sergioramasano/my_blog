<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
	<div class="input-field">
		<input name="title" id="title" type="text" class="validate" value="{{course.title}}" required>
		<label for="title">Course's name</label>
		<span class="helper-text" data-error="Enter the name"></span>
	</div>
	<div class="input-field">
		<input name="price" id="price" type="number" class="validate" value="{{course.price}}" required min="1">
		<label for="price">Price ($)</label>
		<span class="helper-text" data-error="Enter the price"></span>
	</div>
	<div class="input-field">
		<input name="img" id="img" type="text" class="validate" value="{{course.img}}" required>
		<label for="img">Image URL</label>
		<span class="helper-text" data-error="Enter the url of the image"></span>
	</div>
	
	<input type="hidden" name="id" value="{{course.id}}">

	<button type="submit" class="waves-effect waves-light btn btn-primary">Edit</button>
</form>