<h1>Add New Course</h1>

<form action="/add" method="POST">
	<div class="input-field">
		<input name="title" id="title" type="text" class="validate" required>
		<label for="title">Course's name</label>
		<span class="helper-text" data-error="Enter the name"></span>
	</div>
	<div class="input-field">
		<input name="price" id="price" type="number" class="validate" required min="1">
		<label for="price">Price ($)</label>
		<span class="helper-text" data-error="Enter the price"></span>
	</div>
	<div class="input-field">
		<input name="img" id="img" type="text" class="validate" required>
		<label for="img">Image URL</label>
		<span class="helper-text" data-error="Enter the url of the image"></span>
	</div>
	<button type="submit" class="waves-effect waves-light btn btn-primary">Add</button>
</form>