<h1>Courses</h1>

{{#if courses.length}}
	{{#each courses}}
	  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}" alt="{{title}}">
          <span class="card-title black-text">{{title}}</span>
        </div>
        <div class="card-content">
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="/courses/{{id}}" rel="noopener noreferrer" target="_blank">This is a link</a>
        </div>
      </div>
    </div>
  </div>
	{{/each}}
{{else}}
	<p>No courses</p>
{{/if}}